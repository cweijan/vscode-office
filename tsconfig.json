{
	"compilerOptions": {
		"module": "commonjs",
		"target": "es2019",
		"outDir": "out",
		"experimentalDecorators": true,
		"lib": [
			"es6",
			"es2017",
			"es2019"
		],
		"sourceMap": true,
		"paths": {
            "@/*": [
                "./src/*"
            ]
        },
		"resolveJsonModule": true,
        "esModuleInterop": true,
		"strict": false 
	},
	"exclude": [
		"src/react",
		"node_modules",
		".vscode-test"
	]
}
