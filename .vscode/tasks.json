// See https://go.microsoft.com/fwlink/?LinkId=733558
// for the documentation about the tasks.json format
{
	"version": "2.0.0",
	"tasks": [
		{
            "label": "dev",
            "type": "npm",
            "script": "dev",
            "group": "build",
			"isBackground": true,
			"problemMatcher": [
                {
                    "pattern": [
                        {
                            "regexp": ".",
                            "file": 1,
                            "location": 2,
                            "message": 3
                        }
                    ],
                    "background": {
                        "activeOnStart": true,
                        "beginsPattern": {
                            "regexp": "build start"
                        },
                        "endsPattern": {
                            "regexp": "build success"
                        }
                    }
                }
            ]
        }
	]
}
